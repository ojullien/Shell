#!/bin/sh
MAILTO=""
touch /root/work/Shell/log/cron.run
if [ -f /opt/oju/Shell/autosave.sh ]; then
    cd /opt/oju/Shell || exit 1
    bash autosave.sh --active-log --no-display
    cd /etc/cron.daily 2>/dev/null;
fi
if [ -f /opt/oju/Shell/autosavedb.sh ]; then
    cd /opt/oju/Shell || exit 1
    bash autosavedb.sh --active-log --no-display
    cd /etc/cron.daily 2>/dev/null;
fi
exit 0
